{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"ignore": [".next/**", "dist/**", "build/**", ".bun/**", "node_modules/**"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "warn",
				"noNoninteractiveTabindex": "warn",
				"noLabelWithoutControl": "warn",
				"noNoninteractiveElementToInteractiveRole": "warn",
				"useSemanticElements": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn",
				"noSwitchDeclarations": "warn",
				"noUnknownProperty": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn",
				"noImplicitAnyLet": "warn",
				"noArrayIndexKey": "warn",
				"noShadowRestrictedNames": "warn",
				"noGlobalIsNan": "warn"
			},
			"style": {
				"useImportType": "error",
				"useNodejsImportProtocol": "error",
				"useTemplate": "warn",
				"noNonNullAssertion": "warn",
				"noUnusedTemplateLiteral": "warn",
				"useSelfClosingElements": "warn"
			},
			"complexity": {
				"noForEach": "warn",
				"useOptionalChain": "warn",
				"noUselessTernary": "warn",
				"useLiteralKeys": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80
	},
	"css": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": ["*.css"],
			"formatter": {
				"enabled": true
			}
		},
		{
			"include": ["tsconfig*.json"],
			"formatter": {
				"enabled": false
			},
			"linter": {
				"enabled": false
			}
		},
		{
			"include": ["**/__tests__/**", "**/*.test.ts", "**/*.test.tsx"],
			"linter": {
				"rules": {
					"a11y": {
						"noLabelWithoutControl": "warn",
						"useButtonType": "warn",
						"useKeyWithClickEvents": "warn"
					},
					"style": {
						"noNonNullAssertion": "warn"
					},
					"complexity": {
						"noForEach": "warn"
					},
					"performance": {
						"noDelete": "warn"
					}
				}
			}
		}
	]
}
