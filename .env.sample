# OpenAI API Configuration
# Required: Your OpenAI API key (get one from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-api-key-here

# Optional: AI Model Configuration
# Default: gpt-4o-mini (recommended for cost-effectiveness)
OPENAI_MODEL=gpt-4o-mini

# Optional: Token Limits
# Default: 2000 (max 4000)
OPENAI_MAX_TOKENS=2000

# Optional: Temperature (creativity level)
# Default: 0.7 (0.0 = very focused, 2.0 = very creative)
OPENAI_TEMPERATURE=0.7

# Optional: Rate Limiting
# Default: 60 requests per minute
OPENAI_REQUESTS_PER_MINUTE=60

# Default: 1000 requests per hour
OPENAI_REQUESTS_PER_HOUR=1000

# Optional: Security and Logging
# Default: false (set to true for debugging)
OPENAI_ENABLE_LOGGING=false

# Default: error (options: none, error, warn, info)
OPENAI_LOG_LEVEL=error

# Optional: Feature Flags
# Default: true (set to false to disable AI features)
OPENAI_ENABLE_AI=true

# Default: false (set to true for streaming responses)
OPENAI_ENABLE_STREAMING=false

# Default: true (set to false to disable retry logic)
OPENAI_ENABLE_RETRY=true
